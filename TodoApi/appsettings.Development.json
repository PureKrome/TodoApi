{
    "Serilog": {
        "MinimumLevel": {
            "Override": {
                "Microsoft": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level} - {Message:lj}{NewLine}{Exception}"
                }
            }
        ]
    },

    "Authentication": {
        "Schemes": {
            "Bearer": {
                "ValidAudiences": [
                    "http://localhost:47743",
                    "https://localhost:44371",
                    "http://localhost:5000",
                    "https://localhost:5001"
                ],
                "ValidIssuer": "dotnet-user-jwts"
            }
        }
    }
}